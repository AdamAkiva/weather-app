{
  // Use the latest typescript version, not the VSCode version
  "typescript.tsdk": "./be/node_modules/typescript/lib",
  "typescript.preferences.preferTypeOnlyAutoImports": true,

  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.problems.shortenToSingleLine": true,
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  // Allow and enforces the experimental flat config format (should be removed after it is stable)
  // Using the old format WILL NOT WORK with the setting
  "eslint.experimental.useFlatConfig": true,
  "eslint.workingDirectories": [{ "pattern": "./app" }]
}
